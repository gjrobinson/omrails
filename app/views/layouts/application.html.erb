<!DOCTYPE html>
<html>
  <head>
    <title>One Month Rails Project</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <!-- Navigation Bar -->
    <nav class="navbar navbar-dark bg-inverse">
      <div class="container">
        <ul class="nav navbar-nav">
            <li class="nav-item"><%= link_to image_tag("logo-horizontal-white copy.png", size: "150x45", :alt => "AMPA logo"), root_path %></li>
            <li class="nav-item"><%= link_to "About", about_path, class: "nav-link" %></li>
            <li class="nav-item"><%= link_to "Contact", contact_path, class: "nav-link" %></li>
            <% if user_signed_in? %>
              <li class="nav-item pull-md-right"><%= link_to "Log Out", signout_path, method: :delete, class: "nav-link" %>
              </li>
            <% else %>
              <li class="nav-item pull-md-right"><%= link_to "Sign Up", signup_path, class: "nav-link btn btn-warning" %>
              </li>
              <li class="nav-item pull-md-right"><%= link_to "Log In", signin_path, class: "nav-link" %>
              </li>
            <% end %>
        </ul>
      </div>
    </nav>

    <!-- Flash Messages -->
    <% flash.each do |name, message| %>
      <%= content_tag(:div, message, class: "alert alert-info #{name}") %>
    <% end %>

    <!-- Page Content -->
    <%= yield %>
    
    <!-- Footer -->
    <footer class="small text-muted">
      <div class="container">
        <hr>
        <center>
          <p>Â© 2016 American Medical Professions Association</p>
        </center>
      </div>
    </footer>

  </body>
</html>
